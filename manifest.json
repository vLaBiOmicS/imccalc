{
  "manifest_version": 3,
  "name": "IMCCalc",
  "version": "2.1",
  "description": "Calculadora de IMC com persistência no IndexedDB e exportação para CSV.",
  "default_locale": "pt_BR",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "notifications"],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
